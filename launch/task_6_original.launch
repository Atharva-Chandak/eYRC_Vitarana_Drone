<?xml version="1.0" encoding="UTF-8"?>
<launch>
	<arg name="static" default=""/>
        <include 
            file="$(find gazebo_ros)/launch/empty_world.launch">
            <arg name="world_name"  value="$(find vitarana_drone)/worlds/task_6_original$(arg static).world"/>
        </include>
	    <node name="throttler_model_states" type="throttle" pkg="topic_tools" args="messages /gazebo/model_states 3"/>
	    <node name="throttler_gps" type="throttle" pkg="topic_tools" args="messages /edrone/gps 3"/>
	    <node name="gripper_service" type="gripper_service.py" pkg="vitarana_drone"/>
        <node name="setpoint_selector" type="Task_4_VD_2373_setpoint_selector.py" pkg="vitarana_drone"/>
        <arg name="record" default="true"/>
        <arg name="duration" default="540"/>
        <arg name="rec_name" default="Task_6_VD_2373.bag"/>
        <group if="$(arg record)">
            <node name="throttler_model_states" type="throttle" pkg="topic_tools" args="messages /gazebo/model_states 10"/>        
            <node name="rosbag_record_position" pkg="rosbag" type="record"
            args="record -O $(find vitarana_drone)/bag_files/$(arg rec_name) --duration=$(arg duration) /gazebo/model_states_throttle /edrone/marker_data" output="screen"/>
        </group>
</launch>